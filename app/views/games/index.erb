  .container {
    margin: 20px;
  }

  .todaysRestaurant {
    margin-top: 20px;
    margin-bottom: 10px;

  }

  h2 {
    font-size: 120%;
    margin-bottom: 10px;
  }

  .site_list_item {
    border: 1px solid #ccc;
  }

  .selectedFriends h1 {
    padding: 20px;
    border: 1px solid #ccc;
    font-size: 150%;
  }

  .selectedFriends .friends {
    margin-top: 20px;
    
  }

  .friendProfile {
    float: left;
    margin-right: 20px;
    border: 1px solid #ccc;
    padding: 5px;
    text-align: center;
    font-size: 120%;
    margin-bottom: 20px;
  }

  .friendProfile:hover {
    background: #f0f0f0;
    cursor: pointer;
  }

  .friendSelectButton {
    margin-top: 5px;
  }

  textarea {
    width: 99%;
    margin-bottom: 10px;
    padding: 5px;
  }

  .clear { clear: both; }

  .buttons {
    text-align: right;
  }

  .buttons input {
    font-size: 150%;
  }

  .site_list_item {
    padding: 10px;
    border: 5px solid #ccc;
    background: url(<%= root_url(:canvas => false) %>/images/fresh/stripe.png);
  }

  .site_list_item .grid_1 {
    float: left;
    margin-right: 10px;
  }

  .site_list_item .grid_6 {
    float: left;
    width: 410px;
