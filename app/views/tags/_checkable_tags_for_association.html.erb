<% form_tag associate_tag_group_path(@tag_group) do %>
  <div class='tags'>
    <% @tags.each do |tag| %>
      <div class='tag'>
        <input type='checkbox'
               name='tags[]'
               id='<%= tag_element_id = "tag_#{tag.id}" %>'
               <%= @selected_tags.include?(tag.id) ? 'checked="checked"' : '' %>
               value='<%= tag.id %>'/>
        <label for='<%= tag_element_id %>'><%= tag.name %></label>
      </div>
    <% end %>
    <div class='clear'></div>
  </div>
  <div class='break'></div>
  <div class='space_10'></div>
  <div>
    <input type='submit' value='Add tags!'/>
  </div>
<% end %>