<div class="grid_12">
  <h4>Upload your avatar</h4>
  <div class="break"></div>
  <div class="space_10"></div>
  <div class="highlight">
    <div class="grid_1">
      <% if @user.image %>
        <%= image_tag(@user.image.public_filename(:small)) %>
      <% end %>
    </div>
    <%= error_messages_for :image %>
    <% form_for Image.new, :html => {:multipart => true} do |f| %>
      <input type="hidden" name="user_id" value="<%= current_user.id %>"/>

      <%= f.file_field :uploaded_data %>
      <%= f.submit 'upload' %>
    <% end %>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
  <div class="space_5"></div>

  <h4>Active share with friends!</h4>
  <div class="break"></div>
  <div class="space_10"></div>
  <% if current_user.facebook_session_exists? %>
    You have connected your account with your facebook account!  
  <% else %>
    You haven't yet connected your account with your facebook account.
    please click on "Auto share on Facebook" button on the top of the page
  <% end %>
</div>