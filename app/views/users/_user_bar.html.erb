<% if logged_in? -%>
  <div id="user-bar-greeting"><%= t('label.logged_in_as')%> <%= link_to_current_user :content_method => :login %></div>
  <div id="user-bar-action"  >(<%= link_to t('nav.logout'), logout_path, { :title => t('title.logout') }    %>)</div>
<% else -%>
  <div id="user-bar-greeting"><%= link_to_login_with_IP t('label.not_logged_in'), :style => 'border: none;' %></div>
  <div id="user-bar-action"  ><%= link_to t('nav.login'),  login_path,  { :title => t('title.login') } %> /
                               <%= link_to t('nav.signup'), signup_path, { :title => t('title.create_an_account') } %></div>
<% end -%>
