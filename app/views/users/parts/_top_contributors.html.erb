<div class="grid_4 grid_box">
  <h4><%= label %></h4>
  <% users.each do |user| %>
    <% if user.image %>
      <div class="item">
        <%= link_to image_tag(user.image.public_filename(:very_small), :title => user.login, :alt => 'N/A'), user_url(user) %>
      </div>
    <% end %>
  <% end %>
</div>