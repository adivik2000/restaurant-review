<div class="grid_12">
  <h1><%= tt('header.restaurant_create') %></h1>
  <div class="break"></div>

  <%
    # Fetch location from location field and split them by comma
    # Filter by location.
  %>
  <% form_for @restaurant do |f| %>
    <%= f.error_messages.gsub(/(restaurant)/, @topic.name.humanize) %>
    <%= render :partial => 'restaurants/parts/form_attributes_based',
               :locals => {:f => f} %>
    <%= f.submit t('button.create'), :class => 'submit' %>
  <% end %>
</div>

<script type="text/javascript">
  $('.submit').mousedown(function() {
    mFormContentChanged = false;
    return true;
  });
</script>