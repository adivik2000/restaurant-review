<div class='recommendRestaurants'>
  <form action="<%= recommend_url %>" id='recommend_form'>
    <%= t('frontpage.recommend') %>
    <select name='tag_ids[]' onchange="$('#recommend_form').submit()">
      <% if @location_tag_group %>
        <% @location_tag_group.tags.each do |tag| %>
          <option value='<%= tag.id %>'><%= tag.name %></option>
        <% end %>
      <% end %>
    </select>
    <input type='submit' value='<%= t('button.find') %>'/>
  </form>
</div>
<div class='clear'></div>
