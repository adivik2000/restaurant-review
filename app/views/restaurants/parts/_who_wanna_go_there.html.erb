<% if !reviews.empty? %>
  <div class="site_simple_box">
    <h4><%= title %></h4>
    <div class="space_10"></div>

    <% reviews.each_with_index do |review, index| %>
      <% if review.user.image %>
        <div>
          <%= link_to image_tag(review.user.image.public_filename(:very_small),
                      :height => '20px', :alt => 'n/a'), "#",
                      :class => 'image_small',
                      :title => "#{review.user.login}" %>
        </div>
      <% end %>
    <% end %>
    <div class="clear"></div>
    <div class="small">
      <%= link_to 'see all interested people &raquo;', more_link %>
    </div>
    <br/>
  </div>
<% end %>