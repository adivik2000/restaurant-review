<% slider_type = config.data.first ? config.data.first['slider_type'] : '' %>

<% if slider_type == 'easy_slide'%>
  <%= render :partial => "images/modules/sliders/#{slider_type}", :locals => values %>
<% elsif slider_type == 'double_fade' %>
  <%= render :partial => 'images/modules/sliders/double_fade', :locals => values %>
<% end %>
