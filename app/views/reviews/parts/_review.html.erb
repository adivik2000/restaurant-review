<%
   tag_name = tag_name || 'div'
   grid_class = grid_class || 'grid_6'
%>
<<%= tag_name %>>
  <% if review.user.image %>
    <%= link_to image_tag(review.user.image.public_filename(:very_small), :width => '40px', :alt => 'N/A'), "#", :class => 'image_small' %>
  <% else %>
    <%= link_to image_tag('fresh/user.png', :width => '40px', :alt => 'N/A'), '#', :class => 'image_small' %>
  <% end %>
</<%= tag_name %>>
<<%= tag_name %> class="review <%= grid_class %>">
  <% if !review.comment.blank? %>
    <span class="content"><%= simple_format h(review.comment) %> - </span>
  <% end %>

  <span class="reviewer">
    <%= link_to review.user.login, '#' %>
    <% if review.loved? %>
      loved
    <% elsif review.hated? %>
      hated
    <% elsif review.wanna_go? %>
      wanna go to
    <% end %>
    this place!
  </span>
  <span class="date" title="<%= review.updated_at.strftime('%d %b %Y') %>">updated <%= distance_of_time_in_words(review.updated_at, Time.now) %> ago.</span>
</<%= tag_name %>>