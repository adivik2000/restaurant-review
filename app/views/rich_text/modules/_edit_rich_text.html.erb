<div class='edit_module'>
  <h5>Edit content (<%= object.element_key %>)</h5>
  <% form_for object do |f| %>
    <textarea name='premium_template_element[data][][text]'
              id='<%= object.element_key.to_s %>'
              style="width:100%; height: 400px;"><%= object.data.length > 0 ? object.data.first['text'] : '' %></textarea>
    <div class='space_10'></div>
    <%= f.submit t('button.update') %>
  <% end %>
</div>

<script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script>
<script type="text/javascript">
  new nicEditor({buttonList : ['bold','italic','underline','left','center','right', 'justify', 'ol','ul','fontFormat','indent','outdent','link','unlink','image','upload','xhtml']}).panelInstance('<%= object.element_key.to_s %>');
</script>